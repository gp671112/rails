<h1>這是index!!</h1>

<p><%= link_to "新增文章", new_post_path, class: "btn btn-primary" %></p>


<table class="table">
  <thead>
  <tr>
    <th>標題</th>
    <th>內文</th>
    <th>編輯</th>
    <th>刪除</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "編輯", edit_post_path(post), class: "btn btn-secondary" %></td>
      <td><%= link_to "刪除", post_path(post), method: "delete", data: {confirm: "確認刪除"}, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

 