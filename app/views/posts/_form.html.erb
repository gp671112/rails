<%= form_for post do |f| %>

  <div class="form-group">
    <%= f.label :title, "標題" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "內容" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>

  <%= f.submit "送出", class: "btn btn-primary" %>

<% end %>

